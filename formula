class Statup < Formula
  homepage 'https://statup.io'
  desc "An easy to use Status Page for your websites and applications."
  homepage "https://github.com/hunterlong/statup"
  version "$VERSION"
  if OS.mac?
    if Hardware.is_64_bit?
      url "https://github.com/hunterlong/statup/releases/download/$VERSION/statup-osx-x64.tar.gz"
      sha256 "$OSX64"
    else
      url "https://github.com/hunterlong/statup/releases/download/$VERSION/statup-osx-x32.tar.gz"
      sha256 "$OSX32"
    end
  elsif OS.linux?
      if Hardware.is_64_bit?
        url "https://github.com/hunterlong/statup/releases/download/$VERSION/statup-linux-x64.tar.gz"
        sha256 "$LIN64"
      else
        url "https://github.com/hunterlong/statup/releases/download/$VERSION/statup-linux-x32.tar.gz"
        sha256 "$LIN32"
      end
  end

  def install
    bin.install "statup"
  end

  test do
    system "#{bin}/statup", "version"
  end

end
