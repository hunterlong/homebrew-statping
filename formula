class Statup < Formula
  desc "Track and monitor your websites and applications uptime"
  homepage "https://github.com/hunterlong/statup"
  version "$VERSION"
  if OS.mac?
    if Hardware::CPU.is_64_bit?
      url "https://github.com/hunterlong/statup/releases/download/v$VERSION/statup-osx-x64.tar.gz"
      sha256 "$OSX64"
    else
      url "https://github.com/hunterlong/statup/releases/download/v$VERSION/statup-osx-x32.tar.gz"
      sha256 "$OSX32"
    end
  elsif OS.linux?
    if Hardware::CPU.is_64_bit?
      url "https://github.com/hunterlong/statup/releases/download/v$VERSION/statup-linux-x64.tar.gz"
      sha256 "$LIN64"
    else
      url "https://github.com/hunterlong/statup/releases/download/v$VERSION/statup-linux-x32.tar.gz"
      sha256 "$LIN32"
    end
  end

  def install
    bin.install "statup"
  end

  test do
    system "#{bin}/statup", "version"
  end
end
