class Statping < Formula
  desc "Track and monitor your websites and applications uptime"
  homepage "https://github.com/statping/statping"
  version "$VERSION"
  if OS.mac?
    if Hardware::CPU.is_64_bit?
      url "https://github.com/statping/statping/releases/download/v$VERSION/statping-osx-x64.tar.gz"
      sha256 "$OSX64"
    else
      url "https://github.com/statping/statping/releases/download/v$VERSION/statping-osx-x32.tar.gz"
      sha256 "$OSX32"
    end
  elsif OS.linux?
    if Hardware::CPU.is_64_bit?
      url "https://github.com/statping/statping/releases/download/v$VERSION/statping-linux-x64.tar.gz"
      sha256 "$LIN64"
    else
      url "https://github.com/statping/statping/releases/download/v$VERSION/statping-linux-x32.tar.gz"
      sha256 "$LIN32"
    end
  end

  def install
    bin.install "statping"
  end

  test do
    system "#{bin}/statping", "version"
  end
end
